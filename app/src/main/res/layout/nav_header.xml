<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="?attr/colorPrimary"
    android:padding="10dp">

    <TextView
        android:id="@+id/rv_head_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="多云"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:layout_below="@+id/icon_image"
        android:layout_alignEnd="@+id/tv_head_tem" />

    <TextView
        android:id="@+id/tv_head_tem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:text="20℃"
        android:layout_above="@id/rv_head_status"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_about_date"
        android:text="11:51"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@color/white"
        android:text="南京"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_about_mail"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="1012126908@qq.com"
        android:textColor="#FFF"
        android:textSize="14sp" />

    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_about_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_about_mail"
        android:text="夏韦子"
        android:textColor="#FFF"
        android:textSize="14sp" />

    <com.pkmmte.view.CircularImageView
        android:id="@+id/icon_image"
        android:layout_width="100dp"
        android:layout_marginLeft="10dp"
        android:layout_height="100dp"
        android:src="@mipmap/iclan"
        android:layout_above="@id/tv_about_name"
        app:border="true"
        android:layout_marginBottom="10dp"
        app:border_color="#ecd524"
        app:border_width="1dp" />


</RelativeLayout>